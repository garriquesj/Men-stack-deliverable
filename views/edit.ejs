<html>
    <!-- This is my heading now -->
    <%- include ('./partials/head.ejs', {page: 'All products'}) %>
    
    <!-- This is my nav bar now -->
    <%- include ('./partials/nav.ejs') %>

    <section class="hero is-medium has-background-light">
      <div class="hero-body">
        <h1 class="title">Edit Product page</h1>
      </div>
    </section>

    <section class="container is-max-widescreen p-5">
      <!--  NOTE: action will be the route, method will be the HTTP verb-->
      <form action="/artwork/<%=artwotk.id %>?_method=PUT" method="POST">
        <div class="field">
          <label class="label">Art Title</label>
          <div class="control">
            <input
              class="input"
              type="text"
              placeholder="Title"
              name="Title"
              value="<%= artwork.title %> "
            />
          </div>
        </div>

        <div class="field">
          <label class="label">Product Price</label>
          <div class="control">
            <input
              class="input"
              type="text"
              placeholder="medium"
              name="price"
              value="<%= artwork.medium %>"
            />
          </div>
        </div>

        <div class="field">
          <label class="label">Artwork</label>
          <div class="control">
            <input
              class="input"
              type="text"
              placeholder="artwork image"
              name="image"
              value="<%= artwork.image %> "
            />
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <a class="button is-info" href="/artwork/<%= artwork.id %> "
              >Cancel</a
            >
            <button class="button is-success">Edit Artwork</button>
          </div>
        </div>
      </form>
    </section>
  </body>
</html>